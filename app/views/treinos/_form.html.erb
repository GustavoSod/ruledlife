<%= form_with(model: treino, class: "contents") do |form| %>
  <% if treino.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(treino.errors.count, "error") %> prohibited this treino from being saved:</h2>

      <ul>
        <% treino.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :Treino, class: 'text-white' %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full bg-gray-700 border-none", placeholder: "Exemplo: superiores / inferiores" %>
  </div>

  <div class="my-5">
    <%= form.label :Aparelhos, class: 'text-white' %>
    <%= form.text_area :description, rows: 4, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full bg-gray-700 border-none" %>
  </div>

  <div class="field mb-10">
    <%= form.label :Dia, class: 'text-white' %>
    <%= form.collection_select :day_id, @days, :id, :name, { }, { class: "text-white w-[100%] border-gray-400 bg-gray-700 border-none" } %>
  </div>

  <div class="inline">
    <% if treino.new_record? %>
      <%= form.submit "Criar Treino", class: "rounded-lg py-3 px-5 bg-green-600 text-white inline-block font-medium cursor-pointer" %>
    <% else %>
      <%= form.submit "Editar Treino", class: "rounded-lg py-3 px-5 bg-green-600 text-white inline-block font-medium cursor-pointer" %>
    <% end %>
  </div>
<% end %>
