<!DOCTYPE html>
<html>
  <head>
    <title>RuledLife</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-900">
    <div class="flex items-center justify-around bg-gray-800 p-8">
      <div>
        <%=link_to "RuledLife", root_path, class:"text-4xl text-white font-semibold"%>
      </div>
      <div>
        <ul class="flex itens-center text-white text-base items-center">
        <% if user_signed_in? %>
          <%= button_to "Sair", destroy_user_session_path, method: :delete, class:"bg-red-700 p-2 rounded-xl cursor-pointer ml-4" %>
        <% else %>
          <%=link_to "Entrar", new_user_session_path%>
          <%=link_to "Cadastre-se", new_user_registration_path, class:"bg-red-700 p-2 rounded-xl cursor-pointer ml-4"%>
        <%end%>
        </ul>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
