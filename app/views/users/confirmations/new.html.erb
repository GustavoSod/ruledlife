<div class="flex flex-col sm:h-[85vh] h-[100vh] justify-center items-center bg-zinc-900">

  <h2 class="text-white text-center sm:text-5xl text-3xl mb-12 font-semibold -mt-28">Reenviar <span class="text-red-600">Confirmação</span></h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "sm:w-full w-[80%] max-w-xs" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "text-white mb-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full bg-gray-700 border-none rounded-lg p-4", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
    </div>

    <div class="actions mt-5 mb-5">
      <%= f.submit "Reenviar Senha", class: "text-white bg-red-600 p-3 rounded-lg font-semibold w-full" %>
    </div>
  <% end %>
</div>
