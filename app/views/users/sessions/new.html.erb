<div class="flex flex-col h-[85vh] justify-center items-center bg-zinc-900">
<h2 class="text-white text-center text-5xl mb-12 font-semibold">Entre na sua<span class="text-red-600"> Conta</span></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full max-w-xs" }) do |f| %>
  <div class="field mb-4">
    <%= f.label :email, class: "text-white mb-2" %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "Digite seu email", autocomplete: "email", class:"w-full bg-gray-700 border-none rounded-lg p-4" %>
  </div>

  <div class="field mb-6">
    <%= f.label :senha, class: "text-white mb-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Digite sua senha",  class:"w-full bg-gray-700 border-none rounded-lg p-4" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-4">
      <%= f.check_box :remember_me %>
      <%= f.label :lembrar_de_mim, class: "text-white mb-2" %>
    </div>
  <% end %>

  <div class="actions mb-12">
    <%= f.submit "Entrar", class: "text-white bg-red-600 p-3 rounded-lg font-semibold w-full" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

</div>
