<div class="flex flex-col h-[85vh] justify-center items-center bg-gray-900">

<h2 class="text-white text-center text-5xl mb-12 font-semibold">Esqueceu sua<span class="text-red-600"> Senha?</span></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "w-full max-w-xs" }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "text-white mb-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full bg-gray-700 border-none rounded-lg p-4" %>
  </div>

  <div class="actions mt-10">
    <%= f.submit "Send me reset password instructions", class: "text-white bg-red-600 p-3 rounded-lg font-semibold w-full"  %>
  </div>
<% end %>

</div>