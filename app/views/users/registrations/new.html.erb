
<div class="flex flex-col sm:h-[85vh] h-[100vh] justify-center items-center bg-zinc-900">
  <h2 class="text-white text-center sm:text-5xl text-3xl mb-12 font-semibold">Crie sua<span class="text-red-600"> Conta</span></h2>
  <%= render "users/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "sm:w-full w-[80%] max-w-xs" }) do |f| %>
    <div class="field mb-4">
      <%= f.label :email, class: "text-white mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Digite seu email", class:"w-full bg-gray-700 border-none rounded-lg p-4" %>
    </div>

    <div class="field mb-4">
      <%= f.label :senha, class: "text-white mb-2" %>
      <% if @minimum_password_length %>
        <em class="text-white mt-1">(<%= @minimum_password_length %> caracteres no mínimo)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Crie sua senha", class:"w-full bg-gray-700 border-none rounded-lg p-4" %>
    </div>

    <div class="field mb-6">
      <%= f.label :confirmação_de_senha, class: "text-white mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Repita sua senha", class:"w-full bg-gray-700 border-none rounded-lg p-4" %>
    </div>

    <div class="actions">
      <%= f.submit "Cadastre-se", class: "text-white bg-red-600 p-3 rounded-lg font-semibold w-full" %>
    </div>
  <% end %>

  <div class="flex justify-center items-center mt-4">
    <p class="text-white mr-4">Já tem uma conta?</p><%= render "users/shared/links" %>
  </div>
</div>
